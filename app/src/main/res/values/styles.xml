<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTouchPart">
        <item name="android:minWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
    <style name="TitleBar">
        <item name="android:background">@color/title_bar_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Toolbar" parent="BaseTouchPart">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ToolbarDivider">
        <item name="android:background">@color/toolbar_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="ToolbarItem" parent="BaseTouchPart">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/toolbar_item_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">2sp</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>
    <style name="ToolbarItem.Grid">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>
    <style name="ToolbarItemLR" parent="ToolbarItem">
        <item name="android:layout_weight">9</item>
        <item name="android:visibility">gone</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@color/dialog_select_article_background_color_focused</item>
    </style>
    <style name="Block">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="BlockDividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
    </style>
    <style name="Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="DialogSelectArticleHorizontalDivider">
        <item name="android:background">@color/dialog_select_article_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:minHeight">1px</item>
    </style>
    <style name="DialogSelectArticleVerticalDivider">
        <item name="android:background">@color/dialog_select_article_divider_color</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">1px</item>
    </style>
    <style name="DialogToolbarItem" parent="BaseTouchPart">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/dialog_item_background_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Dialog_NoTitle_FullScreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="EditTextSingleLine" parent="TextViewUltraLarge">
        <item name="android:textColor">@color/edit_text_text_color</item>
        <item name="android:background">@color/edit_text_background_color</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:imeOptions">actionUnspecified</item>
    </style>
    <style name="ExtToolbar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ExtToolbarItem">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ext_toolbar_item_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="HorizontalDivider">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:minHeight">1px</item>
    </style>
    <style name="ItemViewDividerHorizontal">
        <item name="android:background">@color/list_page_item_horizontal_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:minHeight">1px</item>
    </style>
    <style name="ItemViewDividerVertical">
        <item name="android:background">@color/list_page_item_vertical_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">1px</item>
    </style>
    <style name="List">
        <item name="android:listSelector">@android:drawable/list_selector_background</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="ListDialogItem">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:buttonTint">@color/button_checkbox</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="MainItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MainItem2">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MainItemBackground">
        <item name="android:background">@color/item_background_color</item>
    </style>
    <style name="MenuItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:textColorHint">@android:color/tab_indicator_text</item>
    </style>
    <style name="Dialog.NoTitleBar" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextViewUltraLarge" parent="TextViewNormal">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="TextViewLarge" parent="TextViewNormal">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextViewNormal">
        <item name="android:textColor">@android:color/tab_indicator_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextViewSmall" parent="TextViewNormal">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextViewVerySmall" parent="TextViewNormal">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TouchBlock">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>
    <style name="VerticalDivider">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">1px</item>
    </style>
    <style name="SelectArticleItemL" parent="BaseTouchPart">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_select_article_item_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_select_article_item_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">70dp</item>
    </style>
    <style name="SelectArticleItemP" parent="BaseTouchPart">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_select_article_item_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_select_article_item_background_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="TabItem">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="SystemSettingsItem" parent="BaseTouchPart">
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CheckboxBahamut" parent="BaseTouchPart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:buttonTint">@color/button_checkbox</item>
    </style>
    <style name="SystemSettingsCheckboxText" parent="TextViewLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SystemSettingsCheckbox" parent="BaseTouchPart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:buttonTint">@color/button_checkbox</item>
    </style>
    <style name="SystemSettingsSpinnerText" parent="TextViewLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SystemSettingsChapter" parent="TextViewLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/article_page_text_item_content0</item>
        <item name="android:background">@color/system_page_chapter_background</item>
        <item name="android:paddingStart">5dp</item>
    </style>
    <style name="SystemSettingsSpinnerItem" parent="SpinnerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="SystemSettingsSlider" parent="SpinnerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">19sp</item>
