        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:backgroundTint">@color/checkbox_unchecked_color</item>
    </style>
    <style name="RightMenuItem" parent="@style/BaseTouchPart">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toolbar_item_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BillingPageButton" parent="BaseTouchPart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/button_rounded_background_2</item>
