<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_view">
    <TextView
        android:id="@+id/mmiSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/author"
        android:textColor="@color/article_page_text_item_author0"
        style="@style/TextViewNormal"/>
    <TextView
        android:id="@+id/mmiMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/loading"
        android:textColor="@color/article_page_text_item_content0"
        style="@style/TextViewSmall"/>
    <TextView
        android:id="@+id/mmiReceivedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/no_assign"
        android:textColor="@color/halfWhite"/>
    <TextView
        android:id="@+id/mmiUnReadCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="99"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/shape_circle_green"/>

    <View style="@style/HorizontalDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>