<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@color/list_page_item_content_background" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" style="@style/TouchBlock">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.kota.telnetUI.textView.TelnetTextViewNormal
                    android:textColor="@color/mail_box_page_item_view_status" android:id="@+id/MailBoxPage_ItemView_Status" android:layout_width="30dp" android:layout_height="wrap_content" style="@style/TextViewNormal"/>
                <com.kota.telnetUI.textView.TelnetTextViewNormal
                    android:textColor="@color/white" android:ellipsize="end" android:id="@+id/MailBoxPage_ItemView_Title" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" style="@style/TextViewNormal"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.kota.telnetUI.textView.TelnetTextViewSmall
                    android:textColor="@color/mail_box_page_item_view_number" android:id="@+id/MailBoxPage_ItemView_Number" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextViewSmall"/>
                <com.kota.telnetUI.textView.TelnetTextViewSmall
                    android:textColor="@color/mail_box_page_item_view_mark" android:id="@+id/MailBoxPage_ItemView_mark" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/word_m" style="@style/TextViewSmall"/>
                <com.kota.telnetUI.textView.TelnetTextViewSmall
                    android:textColor="@color/mail_box_page_item_view_reply" android:id="@+id/MailBoxPage_ItemView_Reply" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/word_r" style="@style/TextViewSmall"/>
                <com.kota.telnetUI.textView.TelnetTextViewSmall
                    android:textColor="@color/mail_box_page_item_view_date" android:id="@+id/MailBoxPage_ItemView_Date" android:paddingLeft="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextViewSmall"/>
                <com.kota.telnetUI.textView.TelnetTextViewSmall
                    android:textColor="@color/mail_box_page_item_view_author" android:gravity="right" android:id="@+id/MailBoxPage_ItemView_Author" android:paddingLeft="12dp" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" style="@style/TextViewSmall"/>
            </LinearLayout>
        </LinearLayout>
        <View style="@style/ItemViewDividerVertical"/>
        <TextView android:textStyle="bold" android:textColor="@color/list_page_item_arrow_color" android:gravity="center" android:id="@+id/MailBoxPage_ItemView_ArrowView" android:background="@color/list_page_item_arrow_background" android:paddingLeft="6dp" android:paddingRight="6dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/arrow_right" style="@style/TextViewSmall"/>
    </LinearLayout>
    <View android:id="@+id/MailBoxPage_ItemView_DividerBottom" style="@style/ItemViewDividerHorizontal"/>
</LinearLayout>
